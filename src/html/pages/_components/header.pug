header
  .container
    .row
      .col-md-12
        .header
          .header__profile
            img.header__photo.img-responsive(alt="photo", src='../../../assets/img/header/header_photo.jpg' )
            .header__desc
              .header__name Владимир Астахов
              .header__info Личный сайт веб-разработчика
            img.header__stars.img-responsive(alt="stars", src='../../../assets/img/header/header_stars.png' )
          .header__hamburger
          .social
            ul.social__list
              li.social__item
                a(href="https://www.yandex.ru/" target="_blank").social__link.social__link_header-white.icon-vk
              li.social__item
                a(href="#").social__link.social__link_header-white.icon-git
              li.social__item
                a(href="#").social__link.social__link_header-white.icon-link
          .header__arrow